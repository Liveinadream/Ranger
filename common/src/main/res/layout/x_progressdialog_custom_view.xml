<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/common_shape_dialog_bgblack"
        android:orientation="vertical">
        <ProgressBar
            android:id="@+id/x_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_margin="5dp" />

        <TextView
            android:id="@+id/x_progress_tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/x_progress_bar"
            android:layout_toRightOf="@+id/x_progress_bar"
            android:ellipsize="end"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="#ffffff"
            android:textSize="15sp" />
    </RelativeLayout>
</FrameLayout>
